generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===== ENUNS =====

enum Role {
  ADMIN
  AUDITOR
  COLABORATOR
}

enum TimeSlotType {
  MORNING
  LUNCH
  AFTERNOON
}

enum ReportType {
  DAILY
  MONTHLY
  CONFORMITY
  CUSTOM
}

enum AlertType {
  BELOW_MIN
  ABOVE_MAX
  NEXT_MIN
  NEXT_MAX
}

enum AlertDanger {
  CRITICAL
  ALERT
}

// ===== MODELS =====

model User {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  passwordHash String
  role         Role

  // relations
  recordsTemperature TemperatureRecord[]
  reports            Report[]

  // reverse relation for Sector.responsibleUser
  responsibleSectors Sector[]

  createdAt DateTime @default(now())
}

model Sector {
  id   String @id @default(uuid())
  name String

  responsibleUserId String?
  responsibleUser   User?   @relation(fields: [responsibleUserId], references: [id])

  foods         Food[]
  requiredTimes RequiredTimeSlot[]

  createdAt DateTime @default(now())
}

model Food {
  id   String @id @default(uuid())
  name String

  sectorId String
  sector   Sector @relation(fields: [sectorId], references: [id])

  tempMin Float
  tempMax Float

  temperatureRecords TemperatureRecord[]
}

model TemperatureRecord {
  id String @id @default(uuid())

  foodId String
  food   Food   @relation(fields: [foodId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  temperature      Float

  alert Alert?

  createdAt DateTime @default(now())
}

model Alert {
  id       String  @id @default(uuid())
  type     AlertType
  danger   AlertDanger
  resolved Boolean @default(false)

  temperatureRecordId String?            @unique
  temperatureRecord   TemperatureRecord? @relation(fields: [temperatureRecordId], references: [id])

  correctiveAction String?

  createdAt DateTime @default(now())
}

model RequiredTimeSlot {
  id String @id @default(uuid())

  sectorId String
  sector   Sector @relation(fields: [sectorId], references: [id])

  type      TimeSlotType
  limitTime DateTime

  createdAt DateTime @default(now())
}

model Report {
  id     String     @id @default(uuid())
  type   ReportType
  period String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  fileUrl String

  createdAt DateTime @default(now())
}
